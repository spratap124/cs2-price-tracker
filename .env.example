# ============================================
# CS2 Price Tracker - Environment Variables
# ============================================

# Server Configuration
PORT=3001

# Database Configuration
# MongoDB Atlas Connection String
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
# Get your connection string from: https://cloud.mongodb.com/
# Replace <db_password> with your actual database password
MONGODB_URI=mongodb+srv://<username>:<db_password>@<cluster>.mongodb.net/cs2_price_tracker?retryWrites=true&w=majority

# Discord Webhook (Optional - for price alerts)
# Get your webhook URL from: Server Settings → Integrations → Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Price Provider Configuration
# Options: "steam" (default), "skinport", or "both" (experimental)
# Use "skinport" for more reliable pricing, or "steam" for Steam Market prices
PRICE_PROVIDER=steam

# Enable fallback to other providers if primary fails (default: true)
USE_PRICE_FALLBACK=true

# Steam API Configuration
# Currency code (24 = INR, 1 = USD, 3 = EUR, etc.)
CURRENCY=24

# User agent for Steam API requests
USER_AGENT=PriceTracker/1.0

# Rate Limiting Configuration
# Minimum time between Steam API requests (milliseconds)
# Increase this if you're getting 429 rate limit errors (e.g., 10000 for 10 seconds)
STEAM_API_MIN_INTERVAL_MS=5000

# Skinport API Configuration (Optional)
# Get your credentials from: https://skinport.com (Settings → API)
# Required if PRICE_PROVIDER=skinport or USE_PRICE_FALLBACK=true
# Uses Basic Authentication with Client ID and Client Secret
SKINPORT_CLIENT_ID=
SKINPORT_CLIENT_SECRET=

# Minimum time between Skinport API requests (milliseconds)
# Skinport allows 8 requests per 5 minutes (default: 37500ms = 37.5 seconds)
SKINPORT_API_MIN_INTERVAL_MS=37500

# Price Check Configuration
# How often to check prices in minutes (default: 5)
# Increase this to reduce API load (e.g., 15 for 15 minutes)
CHECK_INTERVAL_MINUTES=5

# Debug & Logging
# Enable debug logging for Steam API requests (true/false)
DEBUG_STEAM=false

# Enable debug logging for Skinport API requests (true/false)
DEBUG_SKINPORT=false

# Enable debug logging for price provider (shows which provider is used)
DEBUG_PRICE_PROVIDER=false
